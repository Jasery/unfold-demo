/* components/item/item.wxss */

.main {
    height: 200rpx;
    position: relative;
}

.preview {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
}

.preview .ani {
    transition: all 0.5s
}

.content {
    background-color: white;
    position: absolute;
    width: 100%;
    height: 200rpx;
}